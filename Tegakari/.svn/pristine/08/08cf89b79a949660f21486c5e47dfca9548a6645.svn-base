package guiConsoleController;

/**
 * The interface for PrivateTipTo
 * @author jchoi30
 */
public interface I_PrivateTipToDialog 
{
    /**
     * disables all buttons
     */
    public void disableAll();
    /**
     * enables or disables the OK button
     * @param set boolean to set status
     */
    public void setOK(boolean set);
    /**
     * Chooses the player to hand the tip to
     * @param seat the player number
     * @param set what to set it to
     */
    public void setButton(int seat, boolean set);
    /**
     * disposes of the view
     */
    public void eraseWindow();
}
